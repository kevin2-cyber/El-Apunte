<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kevin.codelab.el_apunte">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/elapunte"
        android:label="@string/app_name"
        android:roundIcon="@drawable/elapunte"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.SplashThemeLight"
        tools:targetApi="31">
        <activity
            android:name=".view.ui.WorkSpaceActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.TaskActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>