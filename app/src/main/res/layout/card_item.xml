<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:background="@drawable/card_item"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content"
    app:cardMaxElevation="10dp"
    app:cardBackgroundColor="@color/cardView"
    android:layout_margin="10dp">

    <ImageButton
        android:id="@+id/ib_pallet"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:padding="0dp"
        android:background="@drawable/red"
        android:contentDescription="@string/app_name"
        android:src="@drawable/pallet_normal" />


    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/name"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:src="@drawable/ic_baseline_delete_24" />

    <TextView
            android:id="@+id/tv_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/java_practice"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/kFontColor"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/tv_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="15sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/kFontColor"
            android:layout_marginTop="160dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="20dp"/>

    </androidx.cardview.widget.CardView>
